<div class="container p-4">
    <div class="rows">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/enlaces/editar/{{enlace.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="titulo" value="{{enlace.titulo}}" placeholder="Titulo" autofocus> 
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" value="{{enlace.url}}" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripcion">{{enlace.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                                </button>
                            <a href="/enlaces" class="btn btn-danger btn-block">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>