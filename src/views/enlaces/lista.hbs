<div class="container p-4">
    <div class="row">
        {{#each enlaces}}
        <div class="col-md-3 p-1">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{ url }}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{titulo}}
                        </h3>
                    </a>
                    <p> {{ descripcion }} </p>
                    <p> {{timeago created_at}} </p>
                    <a href="/enlaces/eliminar/{{id}}" class="btn btn-danger"> Eliminar </a>
                    <a href="/enlaces/editar/{{id}}" class="btn btn-dark"> Editar </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h4>No hay enlaces creados.</h4>
                <br/>
                <a href="/enlaces/anadir" class="btn btn-primary"> Crea Uno</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>